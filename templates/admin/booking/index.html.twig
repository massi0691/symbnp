{% extends 'admin/base.html.twig' %}

{% block title %} Administration des réservations ! {% endblock %}


{% block body %}
    <div class="container-fluid">
        <h1 class="my-5"> Administration des réservations </h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Montant</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for booking in pagination.data %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td> {{ booking.createdAt | date('d/m/y H:i') }}</td>
                    <td>
                        <img src=" {{ booking.booker.picture }}" alt="{{ booking.booker.fullName }}"
                             class="avatar-micro rounded-circle">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>{{ booking.ad.title }}</td>
                    <td>{{ booking.amount }}</td>
                    <td>
                        <a href="{{ path('admin_booking_edit',{'id': booking.id}) }}"
                           class="btn btn-primary rounded-2 btn-sm mt-1">
                            <i class="fa-solid fa-pen fa-xs"></i>
                        </a>
                        <a href="{{ path('admin_booking_delete',{'id':booking.id}) }}"
                           class="btn btn-danger rounded-2 mt-1 btn-sm">
                            <i class="fa-solid fa-trash fa-xs"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        {{ pagination.display }}

    </div>
{% endblock %}
