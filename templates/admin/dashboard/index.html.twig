{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white my-3 text-center h-80">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa-solid fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats['users'] }} utilisateurs inscrits</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-dark my-3 text-center h-80">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <i class="fa-solid fa-hotel fa-3x"></i>

                            </div>
                            <div class="col-7">
                                <h4 class="card-title">{{ stats['ads'] }} annonces postées</h4>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-warning my-3 text-center h-80">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <i class="fa-solid fa-folder fa-3x"></i>
                            </div>
                            <div class="col-7">
                                <h4 class="card-title">{{ stats['bookings'] }} réservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-success my-3 text-center h-80 p-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <i class="fa-solid fa-comments fa-3x"></i>
                            </div>
                            <div class="col-7">
                                <h4 class="card-title">{{ stats['comments'] }} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fa-solid fa-arrow-up"></i>Les annonces populaires</h2>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Annonce</th>
                            <th>Propriétaire</th>
                            <th>Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ad in bestAds %}
                            <tr>
                                <td>{{  ad.title | slice(0,50) }}</td>
                                <td>
                                    <img src="{{ad.picture }}" alt="{{ ad.firstName }} {{ ad.lastName }}" class="avatar avatar-micro rounded-circle">
                                    {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-dark">
                                        {{ ad.note | number_format(1,',', ' ') }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3"><i class="fa-solid fa-arrow-down"></i>Les pires annonces</h2>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Annonce</th>
                            <th>Propriétaire</th>
                            <th>Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ad in worstAds %}
                            <tr>
                                <td>{{ ad.title | slice(0,50) }}...</td>
                                <td>
                                    <img src="{{ad.picture }}" alt="{{ ad.firstName }} {{ ad.lastName }}" class="avatar avatar-micro rounded-circle">
                                    {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-dark">
                                        {{ ad.note | number_format(1,',', ' ') }}
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
