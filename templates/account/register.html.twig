{% extends 'base.html.twig' %}

{% block title %} Formulaire d'inscription ! {% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5">Inscrivez vous sur notre site !</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading">Informations générales</h2>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.hash) }}
                {{ form_row(form.passwordConfirm) }}
                {{ form_row(form.email) }}
                {{ form_row(form.picture) }}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading">Détails</h2>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}

                <hr>
                <p>Si vous avez terminer les insertions, vous pouvez les sauvegarder </p>
                <button type="submit" class="btn btn-success">Confirmez l'inscription</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>


{% endblock %}
