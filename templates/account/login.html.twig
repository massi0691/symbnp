{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3 border-1">
                    <h1>Connectez vous !</h1>
                    {% if hasError %}
                        <div class="alert alert-danger">
                            une erreur est survenue, le nom d'utilisateur ou alors
                            le mot de passe est invalide
                        </div>
                    {% endif %}
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group mt-2">
                            <label for="email">Email</label>
                            <input type="text" id="email" name="_username" class="form-control" placeholder="Adresse email..." required value="{{ username }}">
                        </div>
                        <div class="form-group mt-2">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe..." required>
                        </div>
                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
{% endblock %}
