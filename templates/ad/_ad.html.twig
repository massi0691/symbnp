{% set url = path('ads_show',{'slug':ad.slug}) %}
<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price | number_format(2,',',' ') }} € / nuit</strong> <br>
            {% if ad.comments | length > 0 %}
                <small> {% include './partiels/rating.html.twig' with {'rating': ad.avgRatings} %}</small>
            {% else %}
                <small>Pas encore noté</small>
            {% endif %}
        </div>
        <a href="{{ url }}">
            <img src="{{ ad.coverImage }}" alt="Image de l'appartement"
                 style="height: 200px; width: 100%; display: block"
            >
        </a>
        <div class="car-body p-3">
            <a href="{{ url }}">
                <h4 class="card-title">
                    {{ ad.title }}
                </h4>
            </a>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <a href="{{ url }}" class="btn btn-primary float-end">En savoir plus
                !</a>
            {% if app.user is same as ad.author %}
                <a href="{{ path('ads_edit',{'slug':ad.slug}) }}" class="btn btn-secondary">Editer !</a>
            {% endif %}
        </div>
    </div>
</div>
